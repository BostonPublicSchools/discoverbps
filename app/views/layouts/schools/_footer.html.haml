.footer_list

	.footer_left
		%h2{style: 'margin-bottom: 1.5em;', class: 'dark_gray'}
			Visit Schools
		%p
			= auto_link(TextSnippet.find('footer-link-one').try(:text))

	.footer_center
		%h2{style: 'margin-bottom: 1.5em;', class: 'dark_gray'}
			Register
