.timeline
	.event.W.registration.green_bar
		%span.desktop
			= image_tag('point_green_white_open.png', class: 'point')
			%span
				Registration begins
				%br/
				for K, 6 & 9

			-#%span.tablette
				= image_tag('blue_point_arrow.png', class: 'point_arrow')

	.event.last_names.ai.green_bar
		%span.light_blue
			= registration_date_helper(RegistrationDate.where(name: "Last Names A-I").first, "full_month_date")
		%br/
		%span.W
			Last names A&ndash;I

	.seperator

	.event.last_names.jq.green_bar
		%span.light_blue
			= registration_date_helper(RegistrationDate.where(name: "Last Names J-Q").first,"full_month_date")
		%br/
		%span.W
			Last names J&ndash;Q

	.seperator

	.event.last_names.rz.green_bar
		%span.light_blue
			= registration_date_helper(RegistrationDate.where(name: "Last Names R-Z").first, "full_month_date")
		%br/
		%span.W
			Last names R&ndash;Z

	.seperator

	.event.last_names.all.green_bar
		%span.light_blue
			= registration_date_helper(RegistrationDate.where(name: "All Last Names").first,"full_month_date")
		%br/
		%span.W
			All last names

	.event.blank.light_blue_bar

	.event.dark_blue_bar
		%span.desktop
			= image_tag('point_green_onBlue.png', class: 'point')
			%span.light_blue
				= registration_date_helper(RegistrationDate.where(name: "All Other Grades Registration").first, "start_date_short")
			%br/
		%span.W
			All other grades' registration

	.event.dark_blue_bar
		%span.desktop
			%span.light_blue
				= registration_date_helper(RegistrationDate.where(name: "Assignments Mailed").first, "month_range")
			%br/
		%span.W
			Assignments mailed

	.event.last.blue_bar
		%span.desktop
			%span.light_blue
				= registration_date_helper(RegistrationDate.where(name: "First Day of School").first, "start_date_short")
			= image_tag('point_white_onBlue.png', class: 'point')
			%br/
			%span.W
				First day of school!
