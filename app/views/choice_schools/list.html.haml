= render partial: 'header'

.wrap
  = render partial: 'student_tabs'

.wrap.global_map
  = render partial: 'map', locals: { students_list: [@student], school: nil, map_controls: true, resize: true, width: '100%' }

.wrap
  .result
    = render partial: 'preferences'

    #school_list
      = render partial: 'schools'

      %div{ style: 'margin: 3em 0 3em 0;' }
        %div{ style: 'display: inline-block;' }
          = link_to 'Back', confirmation_choice_schools_path(token: current_student.token), id: 'back-button'
        - if @student.choice_schools.present?
          %div{ style: 'display: inline-block;' }
            = link_to 'Continue', order_choice_schools_path, id: 'continue-button'

      .light{ style: 'font-style: italic; margin-top: 3em;' }
        If you have questions about using this site, please email
        = link_to 'onlinechoiceforum@bostonpublicschools.org', 'mailto:onlinechoiceforum@bostonpublicschools.org', target: '_blank'
        for support.


