= render partial: "header"

.wrap
  = render partial: "student_tabs"
.wrap
  .result
    #choice-layout
      %h2{ style: "margin-bottom: 1em;" }
        Success

      .light
        - if flash[:alert].present?
          %p{style: 'color: red; margin-bottom: 2em;'}
            = flash[:alert]
        - else
          %p
            Your choice list has been submitted. You will receive a confirmation email shortly.

        %ol{ style: "margin: 2em 0 0 1.3em;" }
          - @choice_schools.each do |school|
            %li
              %h3
                = school.school.name
