.menu_compare_name
  %div{class: "f", style: "width: 100%;"}
    .name_list
      - current_user_students.each_with_index do |student, i|
        - if student == current_student
          %div{class: "name_info active", id: "student_#{student.id}_tab"}
            %span.name
              = truncate(student.first_name, length: 12)
              %span{aria: {hidden: 'true'}, class: "indicator icon-DBPS-Dev-Assets-SRG-08"}

            %span.grade
              Grade&nbsp;#{student.grade_level}

        - else
          %div{id: "student_#{student.id}_tab", class: "name_info"}
            %span.name
              = truncate(student.first_name, length: 12)
              %span{aria: {hidden: true}, class: "indicator icon-DBPS-Dev-Assets-SRG-08"}

            %span.grade
              Grade&nbsp;#{student.grade_level}

            = link_to schools_path(student_id: student.id) do
              %span.hyperspan
