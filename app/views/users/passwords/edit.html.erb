<div class="page_instructions">
  <div class="title_bloc">
    <h1>Change your password</h1>
  </div>
  <p>Please enter a new password below. Once you click the "Change password" button, you will be automatically logged in.</p>
</div>


<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	
  <% if resource.try(:errors).present? %>
		<div style="color: white;">
			<%= devise_error_messages! %>
		</div>
	<% end %>

  <%= f.hidden_field :reset_password_token %>

  <div class='input_box'>
    <%= f.password_field :password, :autofocus => true, placeholder: 'New password' %>
  </div>

  <div class='input_box'>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm new password' %>
  </div>

  <div class="form_button">
    <%= image_submit_tag('/assets/buttons/change-password.jpg') %>
  </div>

<% end %>