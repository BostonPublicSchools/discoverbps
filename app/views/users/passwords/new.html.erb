<div class="page_instructions">
	<div class="title_bloc">
		<h1>Forgot your password?</h1>
	</div>
	 
	<p>Please enter your email address in the form below. We will send you instructions on resetting your password.</p>

	<% if flash[:alert].present? %>
		<p style="color: red;"><%= flash[:alert] %></p>
	<% elsif flash[:notice].present? %>
		<p style="color: white;"><%= flash[:notice] %></p>  
	<% end %>
</div>

<% unless flash[:notice].present? %>
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		<% if resource.try(:errors).present? %>
			<div style="color: red;">
				<%= devise_error_messages! %>
			</div>
		<% end %>

		<div class='input_box'>
			<%= f.email_field :email, :autofocus => true, placeholder: 'Email' %>
		</div>

		<div class="btn_submit">
			<%= image_submit_tag('/assets/buttons/submit.jpg') %>
		</div>

	<% end %>
<% end %>