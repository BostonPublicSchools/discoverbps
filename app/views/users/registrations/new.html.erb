<div class="page_instructions">
  <div class="title_bloc">
    <h1>Sign Up</h1>
  </div>
  <p>To create an account in DiscoverBPS, please enter your name, email address and password in the form below.</p>
</div>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
  
  <div class='input_box'>
  	<%= f.text_field :name, :autofocus => true, :placeholder => 'Name' %>
  </div>  

  <div class='input_box'>
  	<%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %>
  </div>

  <div class='input_box'>
  	<%= f.password_field :password, :placeholder => 'Password' %>
  </div>

  <div class='input_box'>
  	<%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
  </div>

  <div class="btn_submit">
  	<%= image_submit_tag('/assets/buttons/signup.jpg') %>
 	</div>

<% end %>


<div class="page_instructions">

	<p>You may also register with your Facebook or Twitter account.</p>

	<div><%= link_to image_tag('/assets/buttons/facebook.png'), user_omniauth_authorize_path(:facebook) %></div>
	<div><%= link_to image_tag('/assets/buttons/twitter.png'), user_omniauth_authorize_path(:twitter) %></div>
</div>
