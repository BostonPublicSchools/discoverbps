.progress_bar
	.note.dark_blue
		Jump to any step by clicking on it
	.steps
		.step.first.complete
			%a{href: "/", class:"no-decoration"}
				.bar
				.label
					%span.step_num= 'STEP 1'
					%br/
					%span.step_name= 'search'
		.step.complete
			%a{href: "/schools?student=14518", class:"no-decoration"}
				.bar
				.label
					%span.step_num= 'STEP 2'
					%br/
					%span.step_name= 'learn'
		.step.current
			%a{href: "/schools/compare", class:"no-decoration"}
				.bar
				.label
					%span.step_num= 'STEP 3'
					%br/
					%span.step_name= 'compare & rank'
		.step.last
			%a{href: "/schools/get_ready", class:"no-decoration"}
				.bar
				.label
					%span.step_num= 'STEP 4'
					%br/
					%span.step_name= 'get ready!'
