						<% if @students.present? %>
							<p class="K">Please select from your previous searches:</p>
							<ul class="horizontal_list">
								<% for student in @students %>
									<li><%= link_to student.tab_name, schools_path(student: student.id), class: 'orange_button' %></li>
								<% end %>
								<li><%= button_to 'Clear Searches', {controller: 'students', action: 'delete_all', student_ids: @students.collect {|x| x.id}}, method: :delete, id: 'delete_all_students_button', confirm: 'Are you sure you want to clear all of your previous searches?' %></li>
							</ul>
							<div class='clr'></div>
