<div class="wrap timeline_menu">
	<!--  navigation menu desktop and mobile -->
	<section class="content_wrap ">
		<div class="logo_discover" >
			<span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-01"></span>
		</div>
		<div class="clr"></div>
	</section>
	<!-- end navigation menu desktop and mobile -->
	<div class="clr"></div>
</div>

<!-- script for timeline and registration -->

<div class="wrap global_map">
	<img class="bg_g5" src="/assets/bg_g5.png" />
	<!-- students menu -->
	<div class="menu_student_info ">
		
		<div class="name_list">
			<div class="name_info active" id="name_1">
				<span class="name"><%= current_student.first_name %> <span aria-hidden="true" class="indicator icon-DBPS-Dev-Assets-SRG-08"></span> </span>
				<span class="grade">Grade<br/><span class="number"><%= current_student.grade_level %></span></span>
				<div class="clr"></div>
			</div>
			<div class="student_info">
				<span aria-hidden="true" class="indicator icon-DBPS-Dev-Assets-SRG-33"></span> <span class="text_G2"><%= current_student.street_number %> <%= current_student.street_name %>, Boston <%= current_student.zipcode %></span><br/>
				<% if current_student.sibling_school_id.present? %>
					<span aria-hidden="true" class="indicator icon-DBPS-Dev-Assets-SRG-12"></span> Sibling School: <span class="text_G2"><%= School.find(current_student.sibling_school_id).try(:name) %></span><br/><br/>
				<% end %>			
				<!-- Preferences:<br/>
				<span aria-hidden="true" class=" icon-DBPS-Dev-Assets-SRG-35"></span> School Start Time:<span class="text_G2"> 7:30</span><br/>
				<span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-35"></span> Enrollment: <span class="text_G2">Small</span><br/>
				<span aria-hidden="true" class=" icon-DBPS-Dev-Assets-SRG-35"></span> Facility Features: <span class="text_G2">Swimming Pool, Gym</span><br/> -->
			</div>
			
		</div>	
			
		<div class="clr"></div>
		
	</div>
	<!-- END students menu -->

<%= render partial: 'schools/map', locals: {schools: @eligible_schools, map_controls: false} %>

	<div class="clr"></div>
	
</div>
<div class="wrap result">
	
	<!-- preferences menu side bar for shool listing -->
	<div class="preferences">

		<!-- header only in tablet -->
		<div class="header_preferences">
			<p class="font_21">Choose what matters to Elizabeth: <span id="hide_btn">Hide Criteria &nbsp;<span aria-hidden="true" class="down_arrow icon-DBPS-Dev-Assets-SRG-41"></span></span><span id="show_btn">Show Criteria &nbsp;<span aria-hidden="true" class="up_arrow icon-DBPS-Dev-Assets-SRG-39"></span></span></p>
		</div>
		<!-- END header only in tablet -->
		
		<!-- preferences list for desktop and tablet situation -->
		<div id="preference_content">
			<div class="colonn">
				<div class="preference">
				
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">School Start Time</span></p>
					<label class='font_13_14'><input type='radio' name='pref_school_start_time' value='7:30 am'/><span class="text">7:30 am</span></label>
					<label class='font_13_14'><input type='radio' name='pref_school_start_time' value='8:30 am' /><span class="text">8:30 am</span></label>
					<label class='font_13_14'><input type='radio' name='pref_school_start_time' value='9:30 am' /><span class="text">9:30 am</span></label>
				</div>
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Surround Care</span></p>
					<label class='font_13_14'><input type='checkbox' name='pref_surround_care_before' value='before_school' /><span class="text">Before School</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_surround_care_after' value='after_school'  /><span class="text">After School</span></label>
				</div>
			</div>
			<div class="colonn">
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Grades</span></p>
					<label class='font_13_14'><input type='radio' name='pref_grades' value='Early Learning Center' /><span class="text">Early Learning Center</span></label>
					<label class='font_13_14'><input type='radio' name='pref_grades' value='K-5' /><span class="text">K-5</span></label>
					<label class='font_13_14'><input type='radio' name='pref_grades' value='K-8' /><span class="text">K-8</span></label>
					<label class='font_13_14'><input type='radio' name='pref_grades' value='6-8' /><span class="text">6-8</span></label>
					<label class='font_13_14'><input type='radio' name='pref_grades' value='6-12' /><span class="text">6-12</span></label>
					<label class='font_13_14'><input type='radio' name='pref_grades' value='7-12 (Exam Schools)' /><span class="text">7-12 (Exam Schools)</span></label>
					<label class='font_13_14'><input type='radio' name='pref_grades' value='9-12' /><span class="text">9-12</span></label>
				</div>
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Enrollment</span></p>
					<label class='font_13_14'><input type='checkbox' name='pref_enrollment_small' value='small' /><span class="text">Small</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_enrollment_medium' value='medium' /><span class="text">Medium</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_enrollment_large' value='large' /><span class="text">Large</span></label>
				</div>
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Uniform Policy</span></p>
					<label class='font_13_14'><input type='radio' name='pref_uniform_policy' value='yes' /><span class="text">Yes</span></label>
					<label class='font_13_14'><input type='radio' name='pref_uniform_policy' value='no' /><span class="text">No</span></label>
				</div>
			</div>
			<div class="colonn">
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Special Programs</span></p>
					<label class='font_13_14'><input type='checkbox' name='pref_special_programs' value='Advanced Work Class' /><span class="text">Advanced Work Class</span></label>
				</div>
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">School Focus</span></p>
					<label class='font_13_14'><input type='checkbox' name='pref_school_focus_arts' value='arts' /><span class="text">Arts</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_school_focus_health_careers' value='health_careers' /><span class="text">Health Careers</span></label>
					<label class='font_13_14'><span class='icon_pref' aria-hidden="true" data-icon="&#xe00c;"></span>More</label>
				</div>
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Facility Features</span></p>
					<label class='font_13_14'><input type='checkbox' name='pref_facility_features_swimming_pool' value='swimming pool' /><span class="text">Swimming Pool</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_facility_features_wheelchair_access' value='wheelchair access' /><span class="text">Wheelchair Access</span></label>
					<label class='font_13_14'><span class='icon_pref' aria-hidden="true" data-icon="&#xe00c;"></span>More</label>
				</div>
			</div>
			<div class="colonn last">
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Sports</span></p>
					<label class='font_13_14'><input type='checkbox' name='pref_sports_basketball' value='basketball' /><span class="text">Basketball</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_sports_football' value='football' /><span class="text">Football</span></label>
					<label class='font_13_14'><span class='icon_pref' aria-hidden="true" data-icon="&#xe00c;"></span>More</label>
				</div>
				<div class="preference">
					<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Health & Wellness</span></p>
					<label class='font_13_14'><input type='checkbox' name='pref_health_wellness_full_time_nurse' value='Full-time Nurse' /><span class="text">Full-time Nurse</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_health_wellness_part_time_nurse' value='Part-time Nurse' /><span class="text">Part-time Nurse Physical education</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_health_wellness_physical_education' value='Physical education' /><span class="text">Physical education</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_health_wellness_program_alternative' value='Program or alternative' /><span class="text">Program or alternative</span></label>
					<label class='font_13_14'><input type='checkbox' name='pref_health_wellness_outdoor_play_space' value='Outdoor play space' /><span class="text">Outdoor play space</span></label>
				</div>
			</div>
			<div class="clr"></div>
		</div>
		
	</div>
	<!-- preferences list-->
	<!-- school listing with menu -->
	<div id="school_list">
		<div class="shadow"></div>
		<div class="list_content">	
			<div class="flexible_content" >
				<!-- listing menu-->
				<div class="menu_list">
					<div class="li_frame">
						<div class="arrow menu_bloc">
							<span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-31"></span>
						</div>
						<div class="choice menu_bloc">
							Choice order
						</div>
						<div id="getting_there" class=" menu_bloc ">
							<div class="first_block">
								Address 
							</div>
							
						</div>
						<div class=" menu_bloc">
							School hours
						</div>
						<div class=" menu_bloc">
							Grades
						</div>
						<div class="clr"></div>
					</div>
				</div>
				<!--END listing menu-->
				
				
				<!-- school listing-->
				<ul id="sortable">
					<% @eligible_schools.each_with_index do |school, i| %>
						<li id="list_<%= i %>" class="ui-state-default ">
							<div class="li_frame">
								<div class="no_order line">
									<span class="middle"><%= i + 1 %></span>
								</div>
								<div class="school_name select line">
									<span class="middle">
										<%= school.api_basic_info.try(:[], 0)[:schname_23] %>
										<% if current_student.sibling_school_id == school.bps_id %>
											<span aria-hidden="true" class="select_icon icon-DBPS-Dev-Assets-SRG-12"></span>
										<% end %>
									</span>
								</div>
								<div class="box line getting_there ">
									<div class="first_block middle">
										
										<span class="middle"><%= school.api_basic_info.try(:[], 0)[:campus1address1] %><br /><%= school.api_basic_info.try(:[], 0)[:campus1city] %> <%= school.api_basic_info.try(:[], 0)[:campus1zip] %><br /></span>
									</div>
										
									
								</div>
								<div class="box line school_hours">
									<span  class="middle"> <%= truncate(school.api_hours[0][:schhours1], length: 18) %><br/>
										<div class="max_range">
											<div class="ajust_range" style="margin-left:<%= school_hours_start_time_helper(school.api_hours[0][:schhours1]) %>%;margin-right:<%= school_hours_end_time_helper(school.api_hours[0][:schhours1]) %>%;">
											</div>
										</div>
									</span>
								</div>
								<div class="box line surround_care">
									<span class="middle"><%= school.api_grades[0][:grade] %></span>
								</div>
								<div class="clr"></div>
								
							</div>
								<!--END  School information -->
							
						</li>
					<% end %>
											
				</ul>
				<!--end school listing-->
			</div>
			
		</div>
		
	</div>
	<!--END school listing with menu -->

	
</div>
