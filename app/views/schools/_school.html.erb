<li id="school_<%= school.bps_id %>" class="list_row  ">
	<div class="li_frame">
		<!-- brief school information -->
		<div class="no_order line">
			<span class="sortable_row_number middle">
				<% if student_school.ranked? %>
					<%= index + 1 %>
				<% end %>
			</span>
		</div>
		<div class="school_name select line">
			<span class="middle">
				<span class="sortable_school_name"><%= school.api_basic_info[0][:schname_23] %></span>
				<% if current_student.sibling_school_id == school.bps_id %>
					<span aria-hidden="true" class="select_icon icon-DBPS-Dev-Assets-SRG-12"></span>
				<% end %>
			</span>
		</div>
		
		<!-- add class "open" to show "Walk time info" and "Drive time info"-->
		<div class="box line getting_there ">
			<div class="first_block middle">
				<span class="icon middle">
					<% if school.walk_zone_eligibility == 'Y' %>
						<span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-14"></span>
					<% else %>
						<span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-15"></span>
					<% end %>
				</span>
				<span class="middle sortable_distance"><%= spacer_helper(student_school.distance) %></span>
			</div>
			<div class="second_bloc middle">
				<span aria-hidden="true" class="icon_petit icon-DBPS-Dev-Assets-SRG-14"></span> <%= spacer_helper(student_school.walk_time) %> <span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-18"></span>
					
			</div>
			<div class="second_bloc middle last">
				<span aria-hidden="true" class="icon_petit icon-DBPS-Dev-Assets-SRG-17"></span> <%= spacer_helper(student_school.drive_time) %> <span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-18"></span>
			</div>	
			
		</div>
		<div class="box line school_hours">
			<span class="middle sortable_hours"> <%= truncate(school.api_hours[0][:schhours1], length: 18) %><br/>
				<div class="max_range">
					<div class="ajust_range" style="margin-left:<%= school_hours_start_time_helper(school.api_hours[0][:schhours1]) %>%;margin-right:<%= school_hours_end_time_helper(school.api_hours[0][:schhours1]) %>%;">
					</div>
				</div>
			</span>
		</div>
		<div class="box line surround_care">
			<span class="middle">
				<% if school.api_basic_info[0][:BeforeSchPrograms].present? %>
					<span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-42"></span> Before school<br/>
				<% end %> 
				<% if school.api_basic_info[0][:AfterSchPrograms].present? %>
					<span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-42"></span> After school<% end %>
			</span>
		</div>
		<div class="box line your_fit_icon">
			<span class="middle sortable_fit">
				<span aria-hidden="true" data-grades="<%= school.grade_levels %>" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_gradesoffered"></span>
				<% if school.facilities_present? %>
					<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_facilityfeatures"></span> 
				<% end %>
				<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_schoolfocus"></span> 
				<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_surroundcare"></span> 
				<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_specialprograms"></span> 
				<% if school.fulltime_nurse? %>
					<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_healthandwellness"></span> 
				<% end %>
				<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_sports"></span> 
				<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_enrollment"></span> 
				<% if school.uniform_policy? %>
					<span aria-hidden="true" data-grades="" class="icon category_icon icon-DBPS-Preferences-Icons-20130930-SRG_uniformpolicy"></span> 
				<% end %>
			</span>
		</div>
		<div class="box line your_fit_descrip">
			<span class="middle">
				<span aria-hidden="true" class="icon icon-DBPS-Dev-Assets-SRG-35"></span> Small
			</span>
		</div>
		<div class="box line your_fit_descrip">
			<span class="middle">
				<span aria-hidden="true" class="icon icon-DBPS-Dev-Assets-SRG-35"></span> Yes
			</span>
		</div>
		<div class="clr"></div>
		<!--END brief school information -->
		
		<div class="school_descrip">
			<div class="right_side">

					<%= render partial: 'schools/school_details_desktop', locals: {school: school, student_school: student_school} %>
						
					<%= render partial: 'schools/school_details_mobile', locals: {school: school, student_school: student_school} %>
						 
					<%= render partial: 'schools/school_details_tablet', locals: {school: school, student_school: student_school} %>

					<div class="clr"></div>
				</div>
				<div class="clr"></div>
			</div>
		</div>

	</div>		
</li>