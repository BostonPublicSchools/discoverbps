<!-- Address and zip info -->
<div class="form_line">
	<input id="street_number" name="[student]street_number" class="bloc_3" type="text" placeholder="<%= (defined?(student) && student.try(:street_number).present?) ? student.street_number : 'Street number' %>" />
	<div class="separation_bloc">
		<div class="separation"></div>
	</div>
	<input id="street_name" name="[student]street_name" class="bloc_4" type="text" placeholder="<%= (defined?(student) && student.try(:street_name).present?) ? student.street_name : 'Street name' %>" />
	<div class="separation_bloc">
		<div class="separation"></div>
	</div>
		<input id="zipcode" name="[student]zipcode" class="bloc_2" type="text" placeholder="<%= (defined?(student) && student.try(:zipcode).present?) ? student.zipcode : 'ZIP' %>" />
				
			<!-- Use current location button -->
