<div id="address_verification_row_<%= index %>" class='row'>
	<%= address[:StreetNum] %> <%= address[:Street].try(:titleize) %> <%= address[:ZipCode] %>
	<span id="address_check_mark_<%= index %>" class='address_check_mark icon_selected icon-DBPS-Dev-Assets-SRG-42' style="display:none;"></span>
</div>
<script>
	$("#address_verification_row_<%= index %>").click(function() {
		$('.address_check_mark').hide();
		$('#address_check_mark_<%= index %>').show();
		$('#_searchstreet_number').val('<%= address[:StreetNum] %>');
		$('#_searchstreet_name').val('<%= address[:Street].try(:titleize) %>');
		$('#_searchzipcode').val('<%= address[:ZipCode] %>');
	});
</script>