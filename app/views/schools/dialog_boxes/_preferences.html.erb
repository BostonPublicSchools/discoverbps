				<label class='font_13_14'><input type='checkbox' name='[student]pref_school_focus_' value='' /><span class="text">STEM</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_school_focus_' value='' /><span class="text">STEAM</span></label>
			</div>
			<div class="preference column_3">
				<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Facility Features</span></p>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_swimming_pool' value='swimming pool' /><span class="text">Swimming Pool</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_wheelchair_access' value='wheelchair access' /><span class="text">Wheelchair Access</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_' value='' /><span class="text">Playground</span></label>
