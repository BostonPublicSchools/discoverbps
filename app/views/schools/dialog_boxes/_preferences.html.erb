<!-- dialog preferences -->
<div class='content'>
	<%= form_tag preferences_student_path(student), :method => :put, :remote => true do %>
		<p class='first'>What matters most to <span class='name_child'><%= current_student.first_name %></span>?</p>
		<div class='bloc'>
			<div class="preference column_1">
				<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Special Programs</span></p>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_special_programs' value='Advanced Work Class' /><span class="text">Advanced Work Class</span></label>
			</div>
			<div class="preference column_2">
				<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">School Focus</span></p>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_school_focus_arts' value='arts' /><span class="text">Arts</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_school_focus_health_careers' value='health_careers' /><span class="text">Health Careers</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_school_focus_' value='' /><span class="text">Technology</span></label>
