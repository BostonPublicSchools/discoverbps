				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_' value='' /><span class="text">Cafeteria</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_' value='' /><span class="text">Health Center</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_' value='' /><span class="text">Outdoor classroom</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_' value='' /><span class="text">Sports Ô¨Åelds</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_facility_features_' value='' /><span class="text">Adjacent community&nbsp;center</span></label>
			</div>
			<div class="preference column_4">
				<p class='title font_15'><span class='icon_pref' aria-hidden="true" data-icon="&#xe011;"></span><span class="text">Sports</span></p>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_sports_basketball' value='basketball' /><span class="text">Basketball</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_sports_football' value='football' /><span class="text">Football</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_sports_' value='' /><span class="text">Hockey</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_sports_' value='' /><span class="text">Soccer </span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_sports_' value='' /><span class="text">Volleyball</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_sports_' value='' /><span class="text">Tennis</span></label>
				<label class='font_13_14'><input type='checkbox' name='[student]pref_sports_' value='' /><span class="text">Track</span></label>
			</div>
			<div class='clr'></div>
		</div>
		<div class='btn'><input type="image" src="assets/btn_next.jpg" alt="Submit"></div>
	<% end %>
</div>