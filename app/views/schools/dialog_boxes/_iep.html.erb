<div id="close_icon"><span aria-hidden="true" class="icon-DBPS-Dev-Assets-SRG-07"></span></div>
<!-- dialog individualized education plan -->
<div class='content'>
	<%= form_tag iep_student_path(student), :method => :put, :remote => true do %>
		<h3>Does your child have specialized language or educational needs?</h3>
		
		<% PreferenceCategory.special_needs.each_with_index do |category, i| %>
			<div class='bloc'>
				<p class='first'><%= category.description %>:</p>
				<%= select_tag '[student][preference_ids][]', options_from_collection_for_select(category.preferences, 'id', 'name'), include_blank: true %>
				
				<div class="clr"></div>
			</div>
			<script>
				$('.option_preference_<%= i %>').click(function() {
					$('#category_<%= i %>_preference_ids').val(this.innerText);
				});
			</script>
		<% end %>

		<div class='btn'><%= submit_tag 'Next', disable_with: 'Working...', class: 'orange_submit' %></div>
	<% end %>
</div>
<script>	
	$( document ).ready(function() {
		$("#close_icon").click(function() {
			$(".dialog_box").fadeOut("fast").removeClass("active");
		});
		$(".dialog_box").click(function(e){
	  	e.stopPropagation();
		});
	});
</script>