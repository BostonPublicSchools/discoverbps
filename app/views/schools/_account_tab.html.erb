		$('#login_btn').click(function() {
			if (login_panel_open) {
				login_panel_open = false;
				signup_panel_open = false;
				$('#signup_panel').hide();
				$("#login_panel").hide();
				$(".account_menu_box").width("auto");
			} else {
				login_panel_open = true;
				signup_panel_open = false;
				//console.log("open box");
