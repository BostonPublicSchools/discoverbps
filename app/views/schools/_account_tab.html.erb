<!-- account button ans his listing-->
<div class="account_box">
	<div class="btn_account">Account<!-- <span class='icon_excla'></span> --></div>
	<!-- Start section menu account -->
	<div class='account_menu_box font_15'>
		<!-- Start menu account -->
		<div class='menu'>
			<div class='box'>
				<span>My lists</span>
				<%= link_to 'View', schools_path %>
				<a href='#'>Print</a>
				<%= link_to 'Download', schools_path(format: :csv) %>
				<a href='#'>Share via email</a>
				<a id='save_btn' href='#'>Save <div class='icon' data-icon="&#xe001;" aria-hidden="true"></div></a>
			</div>
			<div class='mobile_only box list_child'>
				<span>&nbsp;</span>
				<a class='child' href='#'>Elizabeth</a>
				<a class='child' href='#'>Tommy</a>
				<a href='#'>+ Add a child</a>
			</div>
			<div class='clr box last'>
				<span>Account</span>

				<% if current_user.present? %>
					<%= link_to 'Settings', edit_user_registration_path %>
					<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
				<% else %>
					<a id='login_btn' href='#'>Login <div class='icon' data-icon="&#xe001;" aria-hidden="true"></div></a>
					<a class='signup_btn' href='#'>Sign Up <div class='icon' data-icon="&#xe001;" aria-hidden="true"></div></a>
				<% end %>
			</div>
			<div class='clr'></div>
		</div>
		<!-- End menu account -->

		
		<!-- Login panel -->
		<div id='login_panel' class='action_box save_box' style="display:none;">
			<div class='actions'>
				<span class='txt_join_list' style='display:none;'>Join to save your lists:</span>
				<span class='txt_login'>Log in with:</span>
				
				<div><%= link_to image_tag('/assets/oauth-facebook.png'), user_omniauth_authorize_path(:facebook) %></div>
				<div><%= link_to image_tag('/assets/oauth-twitter.png'), user_omniauth_authorize_path(:twitter) %></div>
				
				<%= form_for(:user, :as => 'user', :url => session_path(:user)) do |f| %>
					<form method='' action='' name=''>
						<div class='btn input_box'>
							<%= f.email_field :email, placeholder: 'Email address' %>

							<span class='icon_success' data-icon="&#xe002;" aria-hidden="true" style='display:none;'></span>
							<span class='icon_failed' data-icon="&#xe025;" aria-hidden="true" style='display:none;'></span>
						</div>
						<div class='btn input_box'>
							<%= f.password_field :password, placeholder: 'Password' %>

							<span class='icon_success' data-icon="&#xe002;" aria-hidden="true" style='display:none;'></span>
							<span class='icon_failed' data-icon="&#xe025;" aria-hidden="true" style='display:none;'></span>
						</div>
						<div class="signup"><%= image_submit_tag('/assets/oauth-login.png') %></div>
						<a href='#' class='signup_btn btn_login txt_btn_sign_up'>Sign up<span class='note_login'>if you haven't yet</span></a>
						<div class='clr'></div>
					</form>
				<% end %>
			</div>
			<div class='clr'></div>
		</div>
		<!-- End login panel -->

		<!-- Sinup panel -->
		<div id='signup_panel' class='action_box save_box' style="display:none;">
			<div class='actions'>
				<span class='txt_join_list' style='display:none;'>Join to save your lists:</span>
				<span class='txt_login'>Sign Up with:</span>
				
				<div><%= link_to image_tag('/assets/oauth-facebook.png'), user_omniauth_authorize_path(:facebook) %></div>
				<div><%= link_to image_tag('/assets/oauth-twitter.png'), user_omniauth_authorize_path(:twitter) %></div>
				
				<%= form_for(:user, :as => 'user', :url => session_path(:user)) do |f| %>
					<form method='' action='' name=''>
						<div class='btn input_box'>
							<%= f.email_field :email, placeholder: 'Email address' %>

							<span class='icon_success' data-icon="&#xe002;" aria-hidden="true" style='display:none;'></span>
							<span class='icon_failed' data-icon="&#xe025;" aria-hidden="true" style='display:none;'></span>
						</div>
						<div class='btn input_box'>
							<%= f.password_field :password, placeholder: 'Password' %>

							<span class='icon_success' data-icon="&#xe002;" aria-hidden="true" style='display:none;'></span>
							<span class='icon_failed' data-icon="&#xe025;" aria-hidden="true" style='display:none;'></span>
						</div>
						<div class='btn input_box'>
							<%= f.password_field :password_confirmation, placeholder: 'Password Confirmation' %>

							<span class='icon_success' data-icon="&#xe002;" aria-hidden="true" style='display:none;'></span>
							<span class='icon_failed' data-icon="&#xe025;" aria-hidden="true" style='display:none;'></span>
						</div>
						<div class="signup"><%= image_submit_tag('/assets/oauth-create.png') %></div>													
						<div class='clr'></div>
					</form>
				<% end %>
			</div>
			<div class='clr'></div>
		</div>
		<!-- End signup panel -->
		
		<!-- Start register box -->
		<div class='action_box register_box' style='display:none;'>
			<div class='actions'>
				<span class='text'>Registration Checklist:</span><br/>
				<label><input type='checkbox' name='register_check_bpsexpress' value='BPSExpress'/>Submit your lists to <a href='#'>BPSExpress</a></label><br/>
				<span class='warning'>Available soon!</span><br/>
				<label><input type='checkbox' name='register_check_required_documents' value='required documents'/>Collect the <a href='#'>required documents</a></label><br/>
				<label><input  type='checkbox' name='register_check_welcome_center' value='Welcome Center'/>Visit to a <a href='#'>Welcome Center</a></label>		
			</div>
			<div class='clr'></div>
		</div>
		<!-- End register box -->
		
		<div class='clr'></div>
	</div>
	<!-- Start section menu account -->
</div>
<!--END account button ans his listing-->

