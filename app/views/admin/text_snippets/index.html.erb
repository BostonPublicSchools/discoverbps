<% if flash[:alert].present? %>
	<div class="flash_alert"><%= flash[:alert] %></div>
<% elsif flash[:notice].present? %>
	<div class="flash_notice"><%= flash[:notice] %></div>
<% end %>

<h1>Text Snippets</h1>
<br />

<table width="100%;">
	<thead>
		<th style="text-align: left;">Name</th>
		<th style="text-align: left;">Text</th>
		<th style="text-align: left;"></th>
	</thead>
	<tbody>
		<% for text_snippet in @text_snippets %>
			<tr class="hover">
				<td width="150px" style="padding-right: 20px;"><%= text_snippet.slug %></td>
				<td><%= text_snippet.text %></td>
				<td width="70px" align="right"><%= link_to 'Edit', edit_admin_text_snippet_path(text_snippet), class: 'edit_button' %></td>
			</tr>
		<% end %>
	</tbody>
</table>