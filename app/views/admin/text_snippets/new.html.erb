<% if flash[:alert].present? %>
	<div class="errors" style="color: white; background-color: #fc0d1b; padding: 20px; margin-bottom: 30px;"><%= flash[:alert] %></div>
<% elsif flash[:notice].present? %>
	<div class="notice" style="color: white; background-color: #72c900; padding: 20px; margin-bottom: 30px;"><%= flash[:notice] %></div>
<% end %>

<h2>New Text Snippet</h2>

<%= form_for(:text_snippet, :url => admin_text_snippets_path, :html => {:method => :post}) do |f| %>
	<% if @text_snippet.errors.any? %>
	  <div class="alert alert-error">
	    <h3><%= pluralize(@text_snippet.errors.count, "error") %> prohibited this admin user from being saved:</h3>
	    <ul>
	      <% @text_snippet.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="field">
	  <%= f.label :location %>
	  <br />
	  <%= f.text_field :location %>
	</div>

	<div class="field">
	  <%= f.label :text %>
	  <br />
	  <%= f.text_area :text, rows: 10 %>
	</div>
  <p><em>Note: URLs and email addresses will be automatically linked</em></p>
  <div class="actions">
  	<%= f.submit 'Save', :class => 'add_button', :disable_with => "Please wait..." %>
  	&nbsp;&nbsp;
  	<%= link_to 'Cancel', admin_text_snippets_path %>
  </div>
<% end %>