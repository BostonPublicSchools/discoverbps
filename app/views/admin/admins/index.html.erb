<% if flash[:alert].present? %>
	<div class="flash_alert"><%= flash[:alert] %></div>
<% elsif flash[:notice].present? %>
	<div class="flash_notice"><%= flash[:notice] %></div>
<% end %>

<h1>Admin Users</h1>
<br />
<table width="100%;">
	<thead>
		<th style="text-align: left;">email</th>
		<th style="text-align: left;"></th>
	</thead>
	<tbody>
		<% for admin in @admins %>
			<tr class="hover">
				<td width='80px'><%= admin.email %></td>
				<td width="40px"><%= button_to 'Delete', admin_admin_path(admin), method: :delete, class: 'delete_button', confirm: "Are you sure you want to permanently delete this admin user?" %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br />
<%= link_to 'Add a New Admin User', new_admin_admin_path, class: 'add_button', style: 'color: white; font-weight: bold;' %>